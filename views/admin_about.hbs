<div>
    <h1>About</h1>
    <div class="banner-images">
        {{#each about.images}}<div class="col-xs-4 banner-wrapper">
            <img src="/{{this.path}}">
            <button class="btn btn-default btn-delete-banner" data-banner-path="{{this.path}}">Remove</button>
        </div>{{/each}}
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="upload-images">Upload Images</label>
        <input class="form-control" name="upload-images" type="file" accept="image/*" multiple>
    </div>
    <div class="banners-image-preview">

    </div>
    <div class="form-group">
        <textarea rows="7" class="form-control" name="description">{{about.content}}</textarea>
    </div>
    <button id="btn-add-new-banners" class="btn btn-primary btn-block">Submit</button>
</div>
<script type="text/javascript" src="/javascripts/add_about.js"></script>